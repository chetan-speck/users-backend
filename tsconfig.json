{
	"compilerOptions": {
		"allowJs": true,
		"declaration": false,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"isolatedModules": true,
		"lib": ["esnext"],
		"module": "CommonJS",
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": false,
		"strict": true,
		"target": "ES2020"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src/**/*.ts"]
}
